{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["DOM", "DOM.Iterable", "ES2019"],
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "target": "ES2019",
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "jsx": "react-jsx",
    "module": "esnext",
    "outDir": "dist"
  },
  "exclude": [
    "./dist/**/*",
    "./node_modules/**/*",
    "./src/**/*.test.ts",
    "./vite.config.ts"
  ]
}
